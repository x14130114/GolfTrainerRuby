<div class="container">  
  <%= form_with(model: schedule, local: true) do |form| %>
    <% if schedule.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(schedule.errors.count, "error") %> prohibited this schedule from being saved:</h2>

        <ul>
        <% schedule.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

<div class="container has-text-centered">
    <div class="column is-4 is-offset-4">
    <div class="field">
      <%= form.label :title, class: "label is-medium"%>
      <%= form.text_field :title, class: "input is-medium"%>
    </div>

    <div class="field">
      <div class="select is-medium is-fullwidth">
      <%= form.label :trainer, class: "label is-medium"%>
      <%= form.collection_select(:trainer_id, Trainer.all, :id, :first_name)%>
    </div>
    </div>
    <br/>
    <div class="field">
      <div class="select is-medium is-fullwidth">
      <%= form.label :course_id, class: "label is-medium" %>
      <%= form.collection_select(:course_id, Course.all, :id, :course_name) %>
    </div>
    </div>
    <br/>
    <br/>
    <div class="field">
     <%= form.label :start_time,  class: "label is-medium" %>
      <%= form.datetime_select :start_time,
        {ampm: true,
        ignore_date: false,
        start_hour: 8, 
        end_hour: 17,
        discard_minute: true,
        prompt: true,
        prompt: { hour: "Choose hr" },
        :start_year => 2019}, class: "input is-medium"
      %>
    </div>


    <div class="actions">
      <%= form.submit class: "button is-block is-success is-medium is-fullwidth" %>
    </div>
  <% end %>
  </div>
</div> 

</div>
