<!DOCTYPE html>
<html>
<head>
<% provide :head_tags do %>
    <meta name='turbolinks-visit-control' content='reload'>
    <script>
        document.addEventListener("DOMContentLoaded", initMap2);
    </script>
<% end %>
</head>
<body>

<%= form_with(model: course, local: true) do |form| %>
  <% if course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
      <% course.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="container has-text-centered">
    <div class="column is-4 is-offset-4">
  <div class="field">
    <%= form.label :course_name, class: "label is-medium" %>
    <%= form.text_field :course_name, class: "input is-medium" %>
  </div>

  <div class="field">
    <%= form.label :location, class: "label is-medium" %>
    <%= form.text_field :location, class: "input is-medium" %>
  </div>

  <div class="field">
    <%= form.label :holes, class: "label is-medium" %>
    <%= form.number_field :holes, class: "input is-medium" %>
  </div>

  <div class="field">
    <%= form.label :par, class: "label is-medium" %>
    <%= form.number_field :par, class: "input is-medium" %>
  </div>

  <div class="field">
    <%= form.label :latitude, class: "label is-medium" %>
    <%= form.text_field :latitude, class: "input is-medium" %>
  </div>

  <div class="field">
    <%= form.label :longitude, class: "label is-medium" %>
    <%= form.text_field :longitude, class: "input is-medium" %>
  </div>

  <p>
    <div id="map2"></div>
  </p>
  <br/>

  <div class="actions">
    <%= form.submit class: "button is-block is-success is-medium is-fullwidth"  %>
  </div>
<% end %>
</div>
</div>
</body>
</html>
